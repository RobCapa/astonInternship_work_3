<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <EditText
        android:id="@+id/dialogEditContact_editText_lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialogEditContact_editText_firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/dialogEditContact_editText_lastName"
        app:layout_constraintStart_toStartOf="@+id/dialogEditContact_editText_lastName"
        app:layout_constraintTop_toBottomOf="@+id/dialogEditContact_editText_lastName" />

    <EditText
        android:id="@+id/dialogEditContact_editPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/dialogEditContact_editText_firstName"
        app:layout_constraintStart_toStartOf="@+id/dialogEditContact_editText_firstName"
        app:layout_constraintTop_toBottomOf="@+id/dialogEditContact_editText_firstName" />

    <ImageButton
        android:id="@+id/dialogEditContact_imageButton_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogEditContact_editPhone"
        app:srcCompat="@drawable/baseline_delete"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>